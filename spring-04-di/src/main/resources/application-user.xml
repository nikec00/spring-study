<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c">
    <!--普通方式-->
    <bean id="users" class="com.com.nik.pojo.User">
        <property name="name" value="nkc"/>
        <property name="age" value="22"/>
    </bean>
    <bean id="users2" class="com.com.nik.pojo.User">
        <constructor-arg name="name" value="nkc"/>
        <constructor-arg name="age" value="22"/>
    </bean>

    <!--使用p和c的命名空间方式-->
    <bean id="user" class="com.com.nik.pojo.User" p:name="倪克成" p:age="22"/>
    <bean id="user1" class="com.com.nik.pojo.User" c:name="nkc" c:age="23" scope="prototype"/>

</beans>